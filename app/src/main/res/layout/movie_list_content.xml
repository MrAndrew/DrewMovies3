<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="192dp"
            android:layout_height="108dp"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:transitionName="selectedMoviePoster"
            tools:src="@drawable/ic_baseline_local_movies_24_black" />

        <TextView
            android:id="@+id/movie_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/movie_list_title_font_size"
            app:layout_constraintStart_toEndOf="@+id/image_preview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_preview"
            app:layout_constraintBottom_toTopOf="@id/release_date_tv"
            tools:text="Ender's Game"
            android:textColor="@color/off_white_text_color"
            />

        <TextView
            android:id="@+id/release_date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_constraintTop_toBottomOf="@+id/movie_title_tv"
            app:layout_constraintStart_toStartOf="@id/movie_title_tv"
            tools:text="2021-10-31"
            android:textColor="@color/off_white_text_color"
            android:background="@drawable/tag_background"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintTop_toTopOf="@id/image_preview"
            app:layout_constraintStart_toStartOf="@id/image_preview"
            >
            <TextView
                android:id="@+id/user_rating_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="8.4"
                android:textColor="@color/off_white_text_color"
                />
            <ImageView
                android:id="@+id/stars_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/quarter_default_margin"
                android:src="@drawable/ic_baseline_star_rate_24_yellow"
                app:layout_constraintTop_toTopOf="@+id/review_rating_tv"
                app:layout_constraintBottom_toBottomOf="@+id/review_rating_tv"
                app:layout_constraintStart_toEndOf="@+id/review_rating_tv"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/about_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="100dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_preview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/off_white_text_color"
        tools:text="This is text about the movie and could be long This is text about the movie and could be long This is text about the movie and could be long This is text about the movie and could be long This is text about the movie and could be long This is text about the movie and could be long This is text about the movie and could be long This is text about the movie and could be long" />

</androidx.appcompat.widget.LinearLayoutCompat>